---
import Layout from '../layouts/Layout.astro';

const servicii = [
  {
    titlu: "Transport local (București și Ilfov)",
    descriere: "Transport funerar în București și județul Ilfov, cu autospeciale moderne, climatizate și autorizate conform normelor în vigoare.",
    preturi: [
      "București: de la 500 lei",
      "Ilfov: de la 700 lei"
