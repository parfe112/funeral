---
import Layout from '../../layouts/Layout.astro';

// Lista tuturor articolelor din blog
const blogPosts = [
  {
    title: "Cum să pregătești ceremonia de înmormântare",
    excerpt: "Organizarea unei ceremonii de înmormântare poate fi o sarcină copleșitoare în momente dificile. Acest ghid vă ajută să planificați fiecare aspect, de la alegerea siciului până la coordonarea serviciului religios.",
    image: "/images/ceremonie-inm.jpg",
    date: "15 Martie 2025",
    slug: "/blog/cum-sa-pregatesti-ceremonia-de-inmormantare"
  },
  {
    title: "Ajutorul de deces în 2025. De la 1 ianuarie ajutorul de înmormântare oferit de stat a crescut semnificativ",
    excerpt: "Află care este valoarea ajutorului de înmormântare în 2025, cine poate beneficia de acesta și care sunt documentele necesare pentru a obține acest ajutor financiar oferit de stat.",
    image: "/images/ajutor-deces.jpg",
    date: "10 Ianuarie 2025",
    slug: "/blog/ajutorul-de-deces-2025"
  },
  {
    title: "Cum alegi o agenție profesionistă de servicii funerare?",
    excerpt: "Alegerea unei agenții funerare potrivite este esențială pentru a asigura un serviciu de calitate în momente dificile. Aflați care sunt criteriile importante de luat în considerare și ce întrebări să adresați.",
    image: "/images/agentie-prof.jpg",
    date: "28 Februarie 2025",
    slug: "/blog/cum-alegi-agentie-funerara-profesionista"
  }
];
---

<Layout 
  title="Blog - Forever Funeral Home" 
  description="Articole informative și sfaturi pentru familiile îndoliate. Informații utile despre procesul de înmormântare, ajutorul de deces și alte aspecte relevante."
>
  <!-- Hero section -->
  <section class="bg-gray-900 text-white py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-serif font-bold mb-6">Blog Forever Funeral Home</h1>
        <p class="text-xl text-gray-300">
          Articole informative și sfaturi pentru a vă ghida în momentele dificile
        </p>
      </div>
    </div>
  </section>

  <!-- Blog posts -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 gap-12">
          {blogPosts.map(post => (
            <article class="bg-white rounded-xl overflow-hidden shadow-md border border-gray-100 hover:shadow-lg transition-shadow">
              <div class="md:flex">
                <div class="md:w-1/3">
                  <div class="h-64 md:h-full relative">
                    <img 
                      src={post.image} 
                      alt={post.title} 
                      class="w-full h-full object-cover"
                      width="400"
                      height="300"
                      loading="lazy"
                    />
                    <div class="absolute top-4 left-4 bg-accent/90 text-white text-xs px-3 py-1 rounded-full">
                      {post.date}
                    </div>
                  </div>
                </div>
                
                <div class="md:w-2/3 p-6">
                  <h2 class="text-2xl font-bold mb-4 text-gray-900">
                    <a href={post.slug} class="hover:text-accent transition-colors">
                      {post.title}
                    </a>
                  </h2>
                  
                  <p class="text-gray-600 mb-6">
                    {post.excerpt}
                  </p>
                  
                  <a href={post.slug} class="inline-flex items-center text-accent font-medium">
                    <span>Citește articolul complet</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Subscribe to newsletter -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-serif font-bold mb-6 text-gray-900">Abonează-te la newsletter</h2>
        <p class="text-lg text-gray-600 mb-8">
          Primește cele mai recente articole și informații utile direct în inbox-ul tău.
        </p>
        
        <form class="max-w-md mx-auto">
          <div class="flex flex-col sm:flex-row gap-4">
            <input 
              type="email" 
              placeholder="Adresa ta de email" 
              class="flex-grow px-4 py-3 rounded-md border border-gray-300 focus:ring-accent focus:border-accent"
              required
            />
            <button type="submit" class="bg-accent hover:bg-accent/90 text-white px-6 py-3 rounded-md font-medium transition">
              Abonează-te
            </button>
          </div>
          <p class="text-sm text-gray-500 mt-4">
            Datele tale sunt în siguranță. Nu vom trimite spam niciodată.
          </p>
        </form>
      </div>
    </div>
  </section>
</Layout> 